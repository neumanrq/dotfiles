[user]
	name = Robin Neumann
  email = robin.neumann@absolventa.de

[core]
  excludesfile = ~/.gitignore

[color]
  ui = auto

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lala = log --graph --decorate --pretty=format:'\"%C(yellow)%h %Cred%cr %Cgreen[%aN]%C(blue)%d%Creset %s' --abbrev-commit --all
  ls = ls-files
  committers = shortlog -nse --no-merges
  standup = log --since '1 day ago' --oneline --name-status --author robin.neumann@absolventa.de
  standupmonday = log --since '3 days ago' --oneline --name-status --author robin.neumann@absolventa.de
